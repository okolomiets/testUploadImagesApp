extends layout
block content
    div.container.small
        div.row
            div.col-md-6
                form.form-inline(role="form", action="/upload", method="post", enctype="multipart/form-data", id="upload_form")
                    input.form-control.input-sm(type="text", name="title", placeholder="title", id="title")
                    input.form-control.input-sm(type="file", multiple, name="image", id="image")
                    button.btn.btn-primary.btn-sm(type="submit", value="Upload") Upload
        div.row
            div.col-md-5
                div.content
                    table.table.table-striped.table-condensed
                        thead
                            tr
                                th #
                                th url
                                th size, Kb
                                th modified
                        tbody
                            if list.length
                                each val, index in list
                                    tr
                                        td= index+1
                                        td
                                            a(href='/image/#{index+1}') #{val.title}
                                        td= val.size
                                        td= val.modified
                            else
                                tr
                                    td
                                    td
                                    td
                                    td


